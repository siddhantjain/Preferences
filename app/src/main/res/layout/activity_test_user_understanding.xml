<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TestUserUnderstanding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <com.squareup.timessquare.CalendarPickerView
            android:id="@+id/cvGame0CurrentMonth"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity = "center"
            android:layout_weight="30"
            android:layout_marginBottom="20dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Recharge in 7 days"
                android:layout_alignParentStart="true"
                android:id = "@+id/tvGame0SoonerDateLabel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Recharge in 28 days"
                android:layout_alignParentEnd="true"
                android:id = "@+id/tvGame0LaterDateLabel"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="20">
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sbGame0Slider1"
                android:progress="50"
                android:max="100"
                android:minHeight="3dip" android:maxHeight="3dip" android:progressDrawable="@drawable/custom_progress_bar"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text = "leftvalue"
                    android:id="@+id/tvGame0Slider1Left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                     android:text = "Exchange Rate" android:textStyle="bold"
                    android:id="@+id/tvGame0Slider1Center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentEnd="true"
                    android:text = "rightvalue"
                    android:id="@+id/tvGame0Slider1Right"
                    />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="20">
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sbGame0Slider2"
                android:progress="50"
                android:max="100"
                android:minHeight="3dip" android:maxHeight="3dip" android:progressDrawable="@drawable/custom_progress_bar"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text = "leftValue"
                    android:id="@+id/tvGame0Slider2Left"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                     android:text = "Exchange Rate" android:textStyle="bold"
                    android:id="@+id/tvGame0Slider2Center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "rightValue"
                    android:id="@+id/tvGame0Slider2Right"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="30">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id = "@+id/btnGame0SubmitBtn"
                android:layout_gravity="center"
                android:text="Submit"
                android:onClick="doUnderstandingCheck"
                android:layout_weight="1"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id = "@+id/btnGame0InstructionsBtn"
                android:text = "Instructions"
                android:layout_gravity="center"
                android:onClick="showInstructionsDialog"
                android:layout_weight="1"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

